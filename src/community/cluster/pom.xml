<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
      <groupId>org.geoserver</groupId>
      <artifactId>community</artifactId>
      <version>2.4-ENTERPRISE-SNAPSHOT</version>
    </parent>

    <groupId>org.geoserver</groupId>
    <artifactId>geoserver-jms</artifactId>
    <!-- Use the same version as GeoServer here, at least for the moment -->
    <version>2.4-ENTERPRISE-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>GeoServer Enterprise JMS modules</name>
    <repositories>
      <repository>
	<!-- needed for JMS deps -->
	<id>apache</id>
	<name>Apache Maven Repository</name>
	<url>https://repository.apache.org/content/repositories/releases/</url>
      </repository>
      
      <repository>
	<!-- needed for JMS deps -->
	<id>apache-snapshots</id>
	<name>Apache Snapshot Maven Repository</name>
	<url>https://repository.apache.org/content/repositories/snapshots/</url>
	<snapshots>
	  <enabled>true</enabled>
	</snapshots>
      </repository>

      <repository>
	<!-- needed for JMS deps -->
	<id>fuse</id>
	<name>FUSE Source Maven Repository</name>
	<url>http://repo.fusesource.com/nexus/</url>
	<snapshots>
	  <enabled>true</enabled>
	</snapshots>
      </repository>
    </repositories>
<profiles>
	<profile>
		<id>activemq</id>
		<activation>
			<property>
				<name>all</name>
				<value>true</value>
			</property>
		</activation>
		<modules>
			<module>activemqBroker</module>
		</modules>
	</profile>
	<profile>
		<id>embeddedBroker</id>
		<activation>
			<property>
				<name>all</name>
				<value>true</value>
			</property>
		</activation>
		<modules>
			<module>activemqEmbeddedBroker</module>
		</modules>
	</profile>	
	<profile>
		<id>cluster</id>
		<activation>
			<property>
				<name>all</name>
				<value>true</value>
			</property>
		</activation>
		<modules>
			<module>jms-commons</module>
			<module>jms-geoserver</module>
			<module>jms-activeMQ</module>
		</modules>
	</profile>
</profiles>
</project>
